    style(type='text/css').
      /*영역 분할*/
      //영역을 퍼센트로 나누기 위한 준비작업
      html, body {
        width:100%;
        height:100%;
        margin:0;
        padding:0;
      }
      .header-content, .footer-content {
        padding: 0 10%;
        height: 10%;
      }

      /*header CSS*/
      #header-img {
        float: left;
        width: 50px;
        height: 50px;
      }
      .header-brand {
        margin-top: 15px;
        margin-bottom: 10px;
      }
      .navbar {
        margin:0;
      }

      //mobile크기에서 메뉴 버튼
      .header-brand button {
        width: 40px;
        height: 40px;
      }
      .navbar-brand {
        font-family: 'Open Sans Condensed', sans-serif;
        font-size: 2em;
        font-weight: bold;
        letter-spacing: 0.2em;
      }
      #mobile-menu {
        float: right;
      }
      .header-menu img, li {
        display: inline;
        float: left;
      }
      .header-menu img {
        width: 20px;
        height: 20px;
        margin-right: 5px;
      }
      .header-menu li {
        padding-top: 30px;
        padding-bottom: 30px;
        padding-left: 20px;
        margin: 0;
        font-family: 'Roboto Condensed', sans-serif;
        font-size: 1em;
      }
      .header-menu li a {
        padding: 0 25px;
      }

      /*main-content CSS 적용*/
      .main-content {
        width: 100%;
        //margin-top: -20px;
        padding: 0;
      }
      .main-content .carousel-inner .item {
        height: 100%;
        max-height: 600px;
      }
      .main-content .carousel-inner .item img{
        width: auto;
        height: 100%;
        max-height: 600px;
      }
      .carousel-control {
        visibility: hidden;
      }

      /*footer CSS*/
      .footer-content p {
        text-align: center;
      }
      .footer-content #first {
        padding-top: 10px;
      }

      /*영역 분할2*/
      //이걸 여기다 줘야만 main-content의 padding이 먹는다. 왜지??
      body {
        margin:0 10px;
      }
      .main-content {
        margin: 5px;
        padding: 0 10%;
        height: 78%;
      }

    //mouseover시 메뉴 색상 변경
    script.
      $(document).ready(function(){
       $('#mobile-menu li').mouseover(function(){
          $(this).css("background-color","#998e8e");
          $('#mobile-menu a').css('color', 'white');
       });
       $('#mobile-menu li').mouseout(function(){
          $(this).css("background-color","#ffffff");
          $('#mobile-menu a').css('color', '#998e8e');
       });
       $('#mobile-menu li').click(function() {
          $(this).css('border-bottom', '3px solid gray'); //페이지 넘어갈 때 정보 저장
       });
      });
